<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="robots" content="noindex,nofollow,noarchive,nosnippet" />
    <meta content="width=device-width, height=device-height, user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, target-densitydpi=device-dpi, minimal-ui" name="viewport">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

    <% const _styles = Array.isArray(styles) && styles.length ? styles : ['/public/style.css']; %>
    <% _styles.forEach(function(href){ %>
      <link rel="stylesheet" href="<%= href %>" />
    <% }); %>

    <% if (typeof inlineCss === 'string' && inlineCss.length) { %>
      <style><%- inlineCss %></style>
    <% } %>

    <title><%= title %></title>
  </head>
  <body class="<%= bodyClass || '' %>" data-gate="<%= gatePath || '' %>">
    <main class="wrap">
      <header>
        <nav class="breadcrumb">
          <% breadcrumb.forEach((c, i) => { %>
            <% if (i) { %> / <% } %>
            <% if (i === breadcrumb.length - 1) { %>
              <span><%= c.label %></span>
            <% } else { %>
              <a href="<%= c.href %>"><%= c.label %></a>
            <% } %>
          <% }) %>
        </nav>
        <h1><%= title %></h1>
      </header>

      <section>
        <%- body %>
      </section>
    </main>

    <% if (Array.isArray(scripts)) { scripts.forEach(function(src){ %>
      <script src="<%= src %>" defer></script>
    <% }); } %>
    <% if (typeof inlineJs === 'string' && inlineJs.length) { %>
      <script src="/public/inline-tools.js"></script>
      <script><%- inlineJs %></script>
    <% } %>
  </body>
</html>
